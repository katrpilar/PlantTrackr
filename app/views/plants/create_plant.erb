<div class="row">
    <form action="/plants" class="col s12" method="POST">
      <div class="row">
        <div class="input-field col s6 offset-s3">
          <input id="name" type="text" name="name">
          <label for="name">Plant Name</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6 offset-s3">
          <input id="picture" type="text">
          <label for="picture">Photo Url</label>
        </div>
      </div>

      <div class="row">
        <div class="col s3 offset-s3">
          <h6 style="color:#00acc1;">Sunlight Needs</h6>
          <p>
          <input name="sunlight" type="radio" id="sunlight_low" />
          <label for="sunlight_low">Low</label>
        </p>
          <p>
          <input name="sunlight" type="radio" id="sunlight_med" />
          <label for="sunlight_med">Medium</label>
        </p>
          <p>
          <input name="sunlight" type="radio" id="sunlight_high" />
          <label for="sunlight_high">High</label>
        </p>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s6 offset-s3">
          <select>
            <option value="" disabled selected>Choose the soil type</option>
            <option value="sandy">Sandy</option>
            <option value="clay">Clay</option>
            <option value="silt">Silt</option>
            <option value="peaty">Peaty</option>
            <option value="loam">Loam</option>
            <option value="chalky">Chalky</option>
