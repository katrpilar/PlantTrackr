<script>
function changeSoilDescription() {
  var elem = document.getElementById('soil-description');
  var selected = document.getElementsByClassName('active selected')[0].innerText

  switch(selected) {
    case "Sandy":
        elem.innerText = "Sandy soils are light, dry, warm, low in nutrients and often acidic"
        break;
    case "Clay":
      elem.innerText = "Clay soils are heavy, high in nutrients, wet and cold in winter and baked dry in summer"
        break;
    case "Silt":
      elem.innerText = "Silt soils are fertile, light but moisture-retentive, and easily compacted"
        break;
    case "Peaty":
      elem.innerText = "Peat soils are very high in organic matter and moisture"
        break;
    case "Loam":
      elem.innerText = "Loams are mixtures of clay, sand and silt that avoid the extremes of each type"
        break;
    case "Chalky":
      elem.innerText = "Chalky soils are very alkaline and may be light or heavy"
        break;
    default:
      elem.innerText = ""
    }
}

$(document).ready(function() {
  $('select').material_select();
  changeSoilDescription;
});
</script>
